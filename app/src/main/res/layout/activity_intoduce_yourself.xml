<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:text= "@string/Hello1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:id="@+id/textView5"

            android:layout_below="@+id/hello"
            android:layout_alignStart="@+id/hello"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:typeface="serif"
            android:textStyle="normal|bold"
            android:textAlignment="viewStart"
            tools:targetApi="lollipop" />

        <TextView
        android:text="@string/Hello2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:id="@+id/textView6"
            android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:typeface="serif"
            android:textAlignment="viewStart"
            android:textStyle="normal|bold"
            tools:targetApi="lollipop" />

        <com.google.android.youtube.player.YouTubePlayerView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="12dp"
            android:id="@+id/hello_view"
            android:layout_below="@+id/textView6"
            android:layout_centerHorizontal="true"/>


        <Button
            android:text="Play"
            android:layout_width="match_parent"
            android:layout_below="@+id/editText2"
            android:layout_centerHorizontal="true"
            style="@style/CustomButtonStyle"
            android:id="@+id/youtube_introduce_button"
            android:gravity="center"
            android:drawableLeft="@android:drawable/ic_media_play"
            />

        <TextView
            android:text="@string/Hello3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:id="@+id/textView6"
            android:layout_below="@+id/textView5"
            android:layout_alignStart="@+id/textView5"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:typeface="serif"
            android:textAlignment="viewStart"
            android:textStyle="normal|bold"
            tools:targetApi="lollipop" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Type Here!"
            android:ems="10"
            android:layout_marginTop="12dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/editText2"/>
        <TextView
            android:text="@string/Hello4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:id="@+id/textView6"
            android:layout_below="@+id/textView5"
            android:layout_alignStart="@+id/textView5"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:typeface="serif"
            android:textAlignment="viewStart"
            android:textStyle="normal|bold"
            tools:targetApi="lollipop" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Type Here!"
            android:ems="10"
            android:layout_marginTop="12dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/editText2"/>


        <Button
        android:text="Next"
        android:layout_width="100dp"
        android:id="@+id/hello_next_btn"
        android:layout_alignTop="@+id/editText2"
        android:layout_marginTop="12dp"
        android:gravity="center"
        style="@style/CustomButtonStyle"
        android:layout_gravity="right"
        android:layout_alignEnd="@+id/textView5"/>

    </LinearLayout>
</ScrollView>