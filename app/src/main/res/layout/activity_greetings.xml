<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_greetings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:padding="16dp"
    android:background="@color/bgcolor"
   >

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/forward"
        android:layout_alignBottom="@+id/textView9"
        android:layout_toEndOf="@+id/textView9"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="57dp"
        android:id="@+id/imageButton2"
        android:scaleType="centerCrop"/>

    <TextView
        android:text="@string/gree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
android:gravity="center"


        android:textAppearance="@android:style/TextAppearance.Material.Headline"
        android:typeface="serif"
        android:textColor="@color/colorAccent" />

    <TextView
        android:text="@string/gree1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView4"
        android:layout_alignParentEnd="true"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:typeface="serif" />

    <TextView
        android:text="Informal Greetings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:id="@+id/textView9"
        android:layout_below="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:typeface="serif" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/forward"
        android:layout_alignBottom="@+id/textView9"
        android:layout_toEndOf="@+id/textView9"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="57dp"
        android:id="@+id/formal_img"
        android:scaleType="centerCrop"
        android:background="?attr/colorControlHighlight" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/forward"
        android:scaleType="centerCrop"
        android:id="@+id/informal_img"
        android:layout_below="@+id/textView8"
        android:layout_alignStart="@+id/imageButton2"
        android:layout_marginTop="33dp"
        android:background="?attr/colorControlHighlight" />


    <TextView
        android:text="Formal Greetings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="105dp"
        android:id="@+id/textView8"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:typeface="serif"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true" />
</RelativeLayout>
