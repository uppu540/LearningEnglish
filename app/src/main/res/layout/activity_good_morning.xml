<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f97173"
    style="@android:style/Widget.Holo.Light.ScrollView"
    android:fillViewport="true">
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_good_morning"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.example.sango.englishapp.GoodMorning"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:text="@string/goodmorningTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gm_title"
        android:padding="16dp"
        android:textSize="30dp"
        android:layout_gravity="center_horizontal"
        android:textAppearance="@android:style/TextAppearance.Material.Headline"
        android:typeface="serif"
        android:textColor="#ffffff"
        android:textStyle="bold"/>

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:padding="12dp">

    <TextView
        android:layout_weight="1"
        android:text="@string/goodmorning"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/gm"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:typeface="serif"
        android:textAlignment="textStart"
        android:textColor="?attr/colorControlNormal"
        android:background="@android:color/background_light" />
    <ImageButton
   android:id="@+id/speak1"
        android:layout_height="wrap_content"
        android:src="@mipmap/speak"
        android:layout_weight="1"
        android:onClick="m_speak"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:layout_width="30dp" />
</LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light"
    android:layout_gravity="right"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:padding="12dp">
    <TextView
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:typeface="serif"
        android:text="@string/goodmorning1"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/gm1"
        android:layout_gravity="right"
        android:gravity="left"
        android:background="@android:color/background_light" />

    <ImageButton
        android:onClick="m_speak"
        android:background="@android:color/transparent"
        android:id="@+id/speak2"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/speak"
        android:layout_weight="1"
        android:layout_gravity="center"
        />
</LinearLayout>
    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button
           android:layout_weight="1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/play1"
            android:text="Play"
            android:layout_margin="16dp"
            android:layout_gravity="left"
            style="@style/CustomButtonStyle"
            />
        <Button
            android:layout_weight="1"

            android:text="Next"
            android:layout_margin="16dp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/next"
            android:layout_gravity="right"
            android:elevation="1dp"
            android:visibility="visible"
            android:onClick="next"
            style="@style/CustomButtonStyle"/>
    </LinearLayout>

</LinearLayout>
</ScrollView>