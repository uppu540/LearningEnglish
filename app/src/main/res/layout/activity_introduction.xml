<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@android:style/Widget.Holo.Light.ScrollView"
    android:fillViewport="true">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_introduction"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sango.englishapp.Introduction">

    <TextView
        android:padding="16dp"
        android:text="@string/intro_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_intro"
        android:textAppearance="@android:style/TextAppearance.Material.Headline"
        android:typeface="serif"
        android:gravity="center"
        android:textColor="@color/colorAccent" />

    <TextView
        android:text="@string/Introduction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp"
        android:id="@+id/introduction"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:typeface="serif"
        android:layout_marginBottom="16dp"/>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">
    <TextView
        android:text="@string/intro1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/intro1"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:typeface="serif"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/blank"
        android:layout_weight="1"
        android:typeface="serif"
        />
</LinearLayout>



<LinearLayout
    android:padding="16dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:text="@string/intro2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/intro2"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:typeface="serif"
        android:fontFamily="sans-serif" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/blank1"
        android:layout_weight="1"
        android:typeface="serif" />

</LinearLayout>



    <LinearLayout
        android:padding="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/intro3"
            android:text="@string/intro3"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:typeface="serif" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/blank2"
            android:layout_weight="1"
            android:typeface="serif" />

    </LinearLayout>



    <LinearLayout
        android:padding="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="@string/intro4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/intro4"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:typeface="serif" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/blank3"
            android:layout_weight="1"
            android:typeface="serif" />

    </LinearLayout>




    <LinearLayout
        android:padding="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="@string/intro5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/intro5"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:typeface="serif" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/blank4"
            android:layout_weight="1"
            android:typeface="serif" />

    </LinearLayout>



    <Button
        android:text="Next"
        android:layout_width="100dp"
        style="@style/CustomButtonStyle"
        android:id="@+id/next"
        android:layout_gravity="right|end|bottom"
        android:elevation="1dp"
        android:visibility="visible"
        android:onClick="next" />
</LinearLayout>
</ScrollView>