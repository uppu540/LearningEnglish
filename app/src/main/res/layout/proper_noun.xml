<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@android:style/Widget.Holo.Light.ScrollView"
    android:fillViewport="true">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/activity_vertical_margin">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:padding="16dp"
                android:text="The Proper Noun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:id="@+id/propernoun"
                android:typeface="serif"
                android:textAppearance="@android:style/TextAppearance.Material.Headline"
                android:textColor="@color/colorAccent" />

            <ImageView
                android:id="@+id/getVoice"
                android:padding="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/speak"
                />

        </LinearLayout>

        <TextView
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/def_propernoun"
            android:text="@string/defProperNoun"
            android:typeface="serif"
            android:textAppearance="@android:style/TextAppearance.Material.Medium" />

        <TextView
            android:text="@string/example"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Example"
            android:typeface="serif"
            android:textColor="@color/colorPrimary"
            android:textAppearance="@android:style/TextAppearance.Material.Medium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="0.1"
                android:src="@drawable/icon_arrow"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:text="@string/eg1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:id="@+id/eg1"
                android:typeface="serif"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="0.1"
                android:src="@drawable/icon_arrow"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:text="@string/propernoun2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:id="@+id/propernoun2"
                android:typeface="serif"
                android:paddingBottom="12dp"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />

        </LinearLayout>

        <TextView
            android:text="@string/propernoun3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/propernoun3"
            android:typeface="serif"
            android:paddingBottom="12dp"
            android:textAppearance="@android:style/TextAppearance.Material.Medium" />

        <TextView
            android:text="@string/example"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/eg"
            android:textColor="@color/colorPrimary"
            android:typeface="serif"
            android:textAppearance="@android:style/TextAppearance.Material.Medium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="0.1"
                android:src="@drawable/icon_arrow"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:text="@string/eg3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:id="@+id/eg3"
                android:typeface="serif"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="0.1"
                android:src="@drawable/icon_arrow"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:text="@string/eg4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:id="@+id/eg4"
                android:typeface="serif"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="0.1"
                android:src="@drawable/icon_arrow"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:text="@string/eg5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:id="@+id/eg5"
                android:typeface="serif"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="0.1"
                android:src="@drawable/icon_arrow"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:text="@string/eg6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:id="@+id/eg6"
                android:typeface="serif"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />

        </LinearLayout>

        <Button
            android:text="Next"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/next"
            style="@style/CustomButtonStyle"
            android:layout_gravity="right|end|bottom"
            android:elevation="1dp"
            android:visibility="visible"
            android:onClick="next"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>
</ScrollView>